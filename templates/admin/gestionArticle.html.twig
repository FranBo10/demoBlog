{% extends "base.html.twig" %}

{% block title %}Gestion d'Articles
{% endblock %}

{% block body %}
	<div class="text-center my-4">Gestion des articles</div>
	<table class="table table-dark">
		<thead>
			{% for data in colonnes %}{% endfor %}
			<tr>
				<th>{ data }</th>
				<th>Category</th>
				<th>Options</th>
			</tr>
		</thead>
		<tbody>
			{% for article in articles %}{% endfor %}
			<tr>
				<th>{{article.id}}</th>
				<th>{{article.title}}</th>
				<th>
					<img src="{{article.image}}" alt="image" width="50">
				</th>
				<th>{{article.content|slice(1, 10)}}</th>
				<th>{{article.createdAt|date('d/m/Y Ã  H:i:s')}}</th>
				<th>{{article.category.title}}</th>
				<th>
					<a href="" class="text-warning">
						<i class="fa fa-edit"></i>
					</a>
					<a href="" class="text-danger">
						<i class="fa fa-trash"></i>
					</a>
				</th>
			</tr>
		</tbody>
	</table>

{% endblock %}
